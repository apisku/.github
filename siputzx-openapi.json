
{
  "openapi": "3.0.0",
  "info": {
    "title": "Siputzx API",
    "version": "1.0.0",
    "description": "A versatile API server with a wide range of endpoints, including AI-powered services, anime content scraping, file downloads, and Cloudflare AI integrations."
  },
  "tags": [
    {"name": "AI", "description": "AI-powered endpoints"},
    {"name": "Anime", "description": "Endpoints for fetching anime/manga info"},
    {"name": "APK", "description": "Endpoints for searching APK files"},
    {"name": "Cloudflare AI", "description": "Endpoints using Cloudflare's AI"},
    {"name": "Currency", "description": "Endpoints for currency rates"},
    {"name": "Downloader", "description": "Endpoints to download media"},
    {"name": "News", "description": "Endpoints for fetching news"},
    {"name": "General", "description": "General utility endpoints"}
  ],
  "paths": {
    "/api/hello": {
      "get": {
        "tags": ["General"],
        "summary": "Returns a simple 'Hello, World!' message.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {"application/json": {"schema": {"type": "object", "properties": {"message": {"type": "string", "example": "Hello, World!"}}}}}
          }
        }
      }
    },
    "/api/ai/bibleai": {
      "get": {
        "tags": ["AI"],
        "summary": "Get answers from the Bible (GET).",
        "parameters": [
          {"name": "question", "in": "query", "required": true, "schema": {"type": "string"}},
          {"name": "translation", "in": "query", "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "Successful response"}}
      },
      "post": {
        "tags": ["AI"],
        "summary": "Get answers from the Bible (POST).",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {"type": "object", "properties": {"question": {"type": "string"}, "translation": {"type": "string"}}, "required": ["question"]}
            }
          }
        },
        "responses": {"200": {"description": "Successful response"}}
      }
    },
    "/api/ai/felo": {
      "get": {
        "tags": ["AI"],
        "summary": "Get a response from Felo AI (GET).",
        "parameters": [{"name": "query", "in": "query", "required": true, "schema": {"type": "string"}}],
        "responses": {"200": {"description": "Successful response"}}
      },
      "post": {
        "tags": ["AI"],
        "summary": "Get a response from Felo AI (POST).",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {"type": "object", "properties": {"query": {"type": "string"}}, "required": ["query"]}
            }
          }
        },
        "responses": {"200": {"description": "Successful response"}}
      }
    },
    "/api/ai/gemini-lite": {
      "get": {
        "tags": ["AI"],
        "summary": "Get a response from Gemini-Lite (GET).",
        "parameters": [
          {"name": "prompt", "in": "query", "required": true, "schema": {"type": "string"}},
          {"name": "model", "in": "query", "schema": {"type": "string"}},
          {"name": "imgUrl", "in": "query", "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "Successful response"}}
      },
      "post": {
        "tags": ["AI"],
        "summary": "Get a response from Gemini-Lite (POST).",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {"type": "object", "properties": {"prompt": {"type": "string"}, "model": {"type": "string"}, "imgUrl": {"type": "string"}}, "required": ["prompt"]}
            }
          }
        },
        "responses": {"200": {"description": "Successful response"}}
      }
    },
    "/api/anime/{source}/search": {
        "get": {
            "tags": ["Anime"],
            "summary": "Search for anime/manga from a specific source.",
            "parameters": [
                {"name": "source", "in": "path", "required": true, "schema": {"type": "string", "enum": ["anichin", "auratail", "komikindo", "oploverz", "otakdesu"]}},
                {"name": "q", "in": "query", "required": true, "schema": {"type": "string"}}
            ],
            "responses": {"200": {"description": "Search results"}}
        },
        "post": {
            "tags": ["Anime"],
            "summary": "Search for anime/manga from a specific source.",
            "parameters": [
                {"name": "source", "in": "path", "required": true, "schema": {"type": "string", "enum": ["anichin", "auratail", "komikindo", "oploverz", "otakdesu"]}}
            ],
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {"type": "object", "properties": {"q": {"type": "string"}}, "required": ["q"]}
                    }
                }
            },
            "responses": {"200": {"description": "Search results"}}
        }
    },
    "/api/anime/{source}/detail": {
        "get": {
            "tags": ["Anime"],
            "summary": "Get details of an anime/manga.",
            "parameters": [
                {"name": "source", "in": "path", "required": true, "schema": {"type": "string", "enum": ["anichin", "auratail", "komikindo", "otakdesu"]}},
                {"name": "url", "in": "query", "required": true, "schema": {"type": "string"}}
            ],
            "responses": {"200": {"description": "Detailed information"}}
        }
    },
    "/api/anime/{source}/download": {
        "get": {
            "tags": ["Anime"],
            "summary": "Get download links for an anime/manga episode.",
            "parameters": [
                {"name": "source", "in": "path", "required": true, "schema": {"type": "string", "enum": ["anichin", "komikindo", "oploverz", "otakdesu"]}},
                {"name": "url", "in": "query", "required": true, "schema": {"type": "string"}}
            ],
            "responses": {"200": {"description": "Download links"}}
        }
    },
    "/api/anime/{source}/episodes": {
        "get": {
            "tags": ["Anime"],
            "summary": "Get episode list for an anime.",
            "parameters": [
                {"name": "source", "in": "path", "required": true, "schema": {"type": "string", "enum": ["anichin", "oploverz"]}},
                {"name": "url", "in": "query", "required": true, "schema": {"type": "string"}}
            ],
            "responses": {"200": {"description": "List of episodes"}}
        }
    },
    "/api/anime/{source}/latest": {
        "get": {
            "tags": ["Anime"],
            "summary": "Get latest updated anime.",
            "parameters": [
                {"name": "source", "in": "path", "required": true, "schema": {"type": "string", "enum": ["anichin", "auratail"]}}
            ],
            "responses": {"200": {"description": "List of latest anime"}}
        }
    },
    "/api/anime/{source}/popular": {
        "get": {
            "tags": ["Anime"],
            "summary": "Get popular anime.",
            "parameters": [
                {"name": "source", "in": "path", "required": true, "schema": {"type": "string", "enum": ["anichin", "auratail"]}}
            ],
            "responses": {"200": {"description": "List of popular anime"}}
        }
    },
    "/api/anime/{source}/ongoing": {
        "get": {
            "tags": ["Anime"],
            "summary": "Get ongoing anime.",
            "parameters": [
                {"name": "source", "in": "path", "required": true, "schema": {"type": "string", "enum": ["oploverz", "otakdesu"]}}
            ],
            "responses": {"200": {"description": "List of ongoing anime"}}
        }
    },
    "/api/apk/{source}": {
      "get": {
        "tags": ["APK"],
        "summary": "Search for an APK.",
        "parameters": [
          {"name": "source", "in": "path", "required": true, "schema": {"type": "string", "enum": ["an1", "openapk", "playstore"]}},
          {"name": "q", "in": "query", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "Search results"}}
      },
      "post": {
        "tags": ["APK"],
        "summary": "Search for an APK.",
        "parameters": [
          {"name": "source", "in": "path", "required": true, "schema": {"type": "string", "enum": ["an1", "openapk", "playstore"]}}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {"type": "object", "properties": {"q": {"type": "string"}}, "required": ["q"]}
            }
          }
        },
        "responses": {"200": {"description": "Search results"}}
      }
    },
    "/api/cf/v2/models": {
        "get": {
            "tags": ["Cloudflare AI"],
            "summary": "Get available Cloudflare AI models.",
            "responses": {"200": {"description": "List of models"}}
        }
    },
    "/api/cf/v2/audio2text": {
        "post": {
            "tags": ["Cloudflare AI"],
            "summary": "Transcribe audio to text.",
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {"type": "object", "properties": {"audio": {"type": "string", "format": "byte"}, "model": {"type": "string"}}, "required": ["audio"]}
                    }
                }
            },
            "responses": {"200": {"description": "Transcription result"}}
        }
    },
    "/api/cf/v2/image2image": {
        "post": {
            "tags": ["Cloudflare AI"],
            "summary": "Generate an image from an input image and prompt.",
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {"type": "object", "properties": {"image": {"type": "string", "format": "byte"}, "prompt": {"type": "string"}, "model": {"type": "string"}}, "required": ["image", "prompt"]}
                    }
                }
            },
            "responses": {"200": {"description": "Generated image", "content": {"image/png": {"schema": {"type": "string", "format": "binary"}}}}}
        }
    },
    "/api/cf/v2/image2text": {
        "post": {
            "tags": ["Cloudflare AI"],
            "summary": "Generate a description for an image.",
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {"type": "object", "properties": {"image": {"type": "string", "format": "byte"}, "prompt": {"type": "string"}, "model": {"type": "string"}}, "required": ["image", "prompt"]}
                    }
                }
            },
            "responses": {"200": {"description": "Generated text"}}
        }
    },
    "/api/cf/v2/text2image": {
      "post": {
        "tags": ["Cloudflare AI"],
        "summary": "Generate an image from a text prompt.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {"type": "object", "properties": {"prompt": {"type": "string"}, "model": {"type": "string"}}, "required": ["prompt"]}
            }
          }
        },
        "responses": {"200": {"description": "The generated image.", "content": {"image/png": {"schema": {"type": "string", "format": "binary"}}}}}
      }
    },
    "/api/cf/v2/text2speech": {
        "post": {
            "tags": ["Cloudflare AI"],
            "summary": "Generate speech from text.",
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {"type": "object", "properties": {"text": {"type": "string"}, "model": {"type": "string"}}, "required": ["text"]}
                    }
                }
            },
            "responses": {"200": {"description": "Generated audio", "content": {"audio/wav": {"schema": {"type": "string", "format": "binary"}}}}}
        }
    },
    "/api/cf/v2/text2text": {
        "post": {
            "tags": ["Cloudflare AI"],
            "summary": "Generate text from a prompt.",
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {"type": "object", "properties": {"prompt": {"type": "string"}, "model": {"type": "string"}}, "required": ["prompt"]}
                    }
                }
            },
            "responses": {"200": {"description": "Generated text"}}
        }
    },
    "/api/currency/list": {
        "get": {
            "tags": ["Currency"],
            "summary": "Get a list of all supported currencies.",
            "responses": {"200": {"description": "List of currencies"}}
        }
    },
    "/api/currency/rates": {
        "get": {
            "tags": ["Currency"],
            "summary": "Get all currency exchange rates.",
            "responses": {"200": {"description": "Exchange rates"}}
        }
    },
    "/api/currency/convert": {
      "get": {
        "tags": ["Currency"],
        "summary": "Convert between currencies.",
        "parameters": [
          {"name": "amount", "in": "query", "required": true, "schema": {"type": "number"}},
          {"name": "from", "in": "query", "required": true, "schema": {"type": "string"}},
          {"name": "to", "in": "query", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "The converted amount."}}
      }
    },
    "/api/currency/crypto/{symbol}": {
      "get": {
        "tags": ["Currency"],
        "summary": "Get the price of a cryptocurrency.",
        "parameters": [{"name": "symbol", "in": "path", "required": true, "schema": {"type": "string"}}],
        "responses": {"200": {"description": "The current price of the cryptocurrency."}}
      }
    },
    "/api/download/{source}": {
        "get": {
            "tags": ["Downloader"],
            "summary": "Download media from a URL.",
            "parameters": [
                {"name": "source", "in": "path", "required": true, "schema": {"type": "string", "enum": ["snackvideo", "twitter", "aio/blackhole", "aio/j2download"]}},
                {"name": "url", "in": "query", "required": true, "schema": {"type": "string"}}
            ],
            "responses": {"200": {"description": "The downloaded media file or data."}}
        },
        "post": {
            "tags": ["Downloader"],
            "summary": "Download media from a URL.",
            "parameters": [
                {"name": "source", "in": "path", "required": true, "schema": {"type": "string", "enum": ["snackvideo", "twitter", "aio/blackhole", "aio/j2download"]}}
            ],
            "requestBody": {
                "content": {
                    "application/json": {
                        "schema": {"type": "object", "properties": {"url": {"type": "string"}}, "required": ["url"]}
                    }
                }
            },
            "responses": {"200": {"description": "The downloaded media file or data."}}
        }
    },
    "/api/news/{source}": {
      "get": {
        "tags": ["News"],
        "summary": "Get the latest news from a specific source.",
        "parameters": [
            {"name": "source", "in": "path", "required": true, "schema": {"type": "string", "enum": ["antara", "cnbcindonesia", "cnnindonesia", "kompas", "liputan6", "merdeka", "sindonews", "suara", "tribun"]}}
        ],
        "responses": {"200": {"description": "A list of the latest news articles."}}
      }
    }
  }
}
